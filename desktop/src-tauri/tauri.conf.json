{
  "productName": "v2rayB",
  "version": "0.1.0",
  "identifier": "com.v2rayb.desktop",
  "build": {
    "beforeBuildCommand": "cd ../gui && yarn build",
    "frontendDist": "../gui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "v2rayB",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
